CREATE TABLE detalii_destinatii (
    id INT AUTO_INCREMENT PRIMARY KEY,
    destinatie_id INT NOT NULL,
    descriere_lunga TEXT NOT NULL,
    galerie_foto TEXT NOT NULL,
    FOREIGN KEY (destinatie_id) REFERENCES destinatii(id) ON DELETE CASCADE
);

INSERT INTO detalii_destinatii (destinatie_id, descriere_lunga, galerie_foto) VALUES
(1, 'Palatul Parlamentului din București, România (cunoscut înainte de revoluția din 1989 sub numele de Casa Republicii sau Casa Poporului) măsoară 270 m pe 240 m, 84 m înălțime și 92 m sub pământ, realizat în spiritul arhitecturii realist-socialiste. Are 9 niveluri la suprafață și alte 9 subterane. Conform World Records Academy, Palatul Parlamentului este a treia cea mai mare clădire administrativă pentru uz civil ca suprafață din lume, cea mai scumpă clădire administrativă din lume și cea mai grea clădire din lume. Clădirea este situată în partea centrală a Bucureștiului (sector 5), pe Dealul Arsenalului, încadrat de strada Izvor la vest și nord-vest, Bulevardul Națiunile Unite spre nord, Bulevardul Libertății la est și Calea 13 Septembrie la sud.','images/parlament1.jpg,images/parlament2.jpg,images/parlament3.jpg,images/parlament4.jpg'),
(2, 'Castelul Bran, situat în inima Transilvaniei, aproape de Brașov, este adesea asociat cu legenda lui Dracula, figura iconică a lui Vlad Țepeș, domnitorul Valahiei cunoscut pentru lupta împotriva invadatorilor otomani. Deși conexiunea dintre Vlad Țepeș și castel este mai mult o creație literară decât una istorică, aceasta nu a împiedicat mii de turiști să viziteze acest misterios castel în căutarea poveștilor de vampiri.', 'images/castelul_bran1.jpg,images/castelul_bran2.jpg,images/castelul_bran3.jpg,images/castelul_bran4.jpg'),
(3, 'Delta Dunării, cea mai mare și cea mai bine conservată deltă din Europa, este un ecosistem unic situat în estul României, unde Dunărea se varsă în Marea Neagră. Este recunoscută ca sit UNESCO pentru biodiversitatea sa extraordinară, găzduind sute de specii de păsări, pești și alte animale sălbatice, multe dintre ele fiind rare sau amenințate cu dispariția. Printre cele mai cunoscute specii se numără pelicani, lebede, egrete și cormorani, care atrag pasionați de birdwatching din întreaga lume.','images/delta1.jpg,images/delta2.jpg,images/delta3.jpg,images/delta4.jpg'),
(4, 'Transfăgărășanul, oficial cunoscut ca DN7C, este un drum montan care traversează Munții Făgăraș, cei mai înalți munți din România. Construit în anii ’70 la ordinul lui Nicolae Ceaușescu, acesta a fost conceput ca o rută strategică militară și se întinde pe aproximativ 90 de kilometri, oferind unele dintre cele mai impresionante și dramatice peisaje montane din țară. Drumul este cunoscut pentru serpentinele sale înguste, tunelurile săpate în stâncă și viaductele spectaculoase, fiind deschis traficului doar în lunile de vară din cauza condițiilor meteorologice severe din restul anului.','images/trans1.jpg,images/trans2.jpg,images/trans3.jpg,images/trans4.jpg'),
(5, 'Castelul Corvinilor, situat în Hunedoara, este un impresionant castel gotic din secolul XV, construit de Ioan de Hunedoara. Renumit pentru arhitectura sa spectaculoasă, include turnuri impunătoare, Sala Cavalerilor și o fântână legendară săpată de prizonieri turci.','images/castelul_corvinilor1.jpg,images/castelul_corvinilor2.jpg,images/castelul_corvinilor3.jpg,images/castelul_corvinilor4.jpg'),
(6, 'Salina Turda datează din perioada romană, fiind exploatată pentru sare de peste 2.000 de ani. Primele atestări documentare datează din anul 1075, iar în Evul Mediu extracția sării era una dintre principalele activități economice din zonă. Începând cu secolul al XVII-lea, mina a fost extinsă, săpându-se manual galeriile care astăzi impresionează turiștii. Exploatarea sării a fost o activitate intensă până în 1932, când a fost închisă din motive economice. Timp de aproape 80 de ani, galeriile au fost folosite ocazional ca depozite sau adăposturi în perioade de război. În 2010, salina a fost restaurată și transformată într-unul dintre cele mai spectaculoase obiective turistice din România.','images/salina_turda1.jpg,images/salina_turda2.jpg,images/salina_turda3.jpg,images/salina_turda4.jpg'),
(7, 'De luni până sâmbătă, din mai și până în octombrie, de 84 de ani, locomotiva Mocănița străbate aceeași rută de 21,6 kilometri între Vișeu și Paltin pentru a transporta lemne și pentru a încânta turiștii. Ultima locomotivă cu aburi din lume pleacă la ora 9 dimineața, te poartă prin plaiuri unde natura abia a fost atinsă de mâna omului și te aduce înapoi la ora 15. Dacă vrei să te bucuri pe deplin de acest drum, îți trebuie musai o companie pe măsură, fie ea și o carte de suflet.', 'images/mocanita1.jpg,images/mocanita2.jpg,images/mocanita3.jpg,images/mocanita4.jpg'),
(8, 'Cazanele Dunării, situate lângă Dubova, județul Mehedinți, sunt una dintre cele mai spectaculoase zone naturale din România. Aici, Dunărea străbate Munții Carpați, formând un defileu impresionant cu pereți stâncoși abrupți. Atracții emblematice includ Chipul lui Decebal, Mănăstirea Macronia și Peștera Ponicova. Loc ideal pentru croaziere și drumeții.','images/cazane1.jpg,images/cazane2.jpg,images/cazane3.jpg,images/cazane4.jpg'),
(9, 'Cimitirul Vesel din Săpânța, județul Maramureș, este celebru pentru crucile viu colorate și epitafurile satirice care descriu viața celor îngropați. A fost creat de Stan Ioan Pătraș în anii 1930, artist popular care a sculptat și pictat primele cruci. Crucile sunt decorate în stil tradițional maramureșean, predominant albastru, și ilustrează, prin picturi naive, meseria sau modul în care persoana a trăit ori a murit. Pe fiecare cruce se găsesc epitafuri amuzante sau ironice, scrise în versuri, care adesea conțin umor și înțelepciune populară.', 'images/sapanta1.jpg,images/sapanta2.jpg,images/sapanta3.jpg,images/sapanta4.jpg'),
